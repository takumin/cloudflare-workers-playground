{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:best-practices",
		"github>aquaproj/aqua-renovate-config#2.7.4"
	],
	"timezone": "Asia/Tokyo",
	"automerge": true,
	"lockFileMaintenance": {
		"enabled": true
	},
	"packageRules": [
		{
			"groupName": "node",
			"matchPackageNames": ["node", "nodejs/node"]
		},
		{
			"groupName": "pnpm",
			"matchPackageNames": ["pnpm", "pnpm/pnpm"]
		}
	]
}
